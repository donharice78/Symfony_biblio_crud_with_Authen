{% extends 'base.html.twig' %}

{% block title %}Livre{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Livre Details</h2>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Id</dt>
                    <dd class="col-sm-9">{{ livre.id }}</dd>

                    <dt class="col-sm-3">Titre</dt>
                    <dd class="col-sm-9">{{ livre.titre }}</dd>

                    <dt class="col-sm-3">Auteur</dt>
                    <dd class="col-sm-9">{{ livre.auteur }}</dd>
                </dl>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <div>
                    <a href="{{ path('app_livre_index') }}" class="btn btn-secondary">Back to List</a>
                    <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-warning">Edit</a>
                </div>
                <div>
                    <form method="post" action="{{ path('app_livre_delete', {'id': livre.id}) }}" style="display:inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
                        <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
