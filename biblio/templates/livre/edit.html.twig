{% extends 'base.html.twig' %}

{% block title %}Edit Livre{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Edit Livre</h2>
            </div>
            <div class="card-body">
                {{ include('livre/_form.html.twig', {'button_label': 'Update'}) }}

               
            </div>
            <div class="card-footer d-flex justify-content-between">
                <a href="{{ path('app_livre_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_livre_edit', {'id': livre.id}) }}" class="btn btn-warning">Edit</a>
                <form method="post" action="{{ path('app_livre_delete', {'id': livre.id}) }}" style="display:inline;">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ livre.id) }}">
                    <button class="btn btn-danger" type="submit" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
